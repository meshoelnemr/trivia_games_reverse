<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient android:startColor="#3cce8f" android:endColor="#1dcd82" android:angle="270.0" />
            <stroke android:width="1.0dip" android:color="#ff828282" />
            <corners android:radius="10.0dip" />
            <padding android:left="8.0dip" android:top="8.0dip" android:right="8.0dip" android:bottom="8.0dip" />
        </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="8dip" />
             <stroke android:width="1dip" android:color="#868a57" />
             <solid  android:color="#24ab15"/>       
