<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:drawable="@drawable/btn_grey" />
    <item android:state_enabled="true" android:drawable="@drawable/btn_blue" />
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10.0dip" />
            <stroke android:width="1.0dip" android:color="#ff5e7974" />
            <gradient android:startColor="#ff345953" android:endColor="#ff689a92" android:angle="-90.0" />
        </shape>
    </item>
</selector>